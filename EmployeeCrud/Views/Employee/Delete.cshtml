 @model EmployeeCrud.Models.EmployeeModel
<div class="container"></div>
<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-6">
                <div class="form-group mb-2">
                    <label class="form-label">Name</label>
                    <input type="text" class="form-control" placeholder="Name" asp-for="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mb-2 ">
                    <label class="form-label">Address</label>
                    <input type="text" class="form-control" placeholder="Address" asp-for="Address">
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group mb-2 ">
                    <label class="form-label">Date</label>
                    <input type="date" class="form-control" placeholder="Date" asp-for="Date">
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="form-group mb-2 ">
                    <label class="form-label">Status</label>
                    <input type="text" class="form-control" placeholder="Status" asp-for="Status">
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group mb-2">
            <input type="submit" value="Delete" class="btn btn-danger margin-left " />
            <a type="button" class="btn btn-dark" asp-action="Index" asp-controller="Employee">Back</a>
        </div>

    </div>

</form>   