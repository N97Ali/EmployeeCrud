@model EmployeeCrud.Models.EmployeeModel;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EmployeeCrud</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EmployeeCrud.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @*  <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>

                        </li> *@
                     @*    <li class="nav-item">
                            <span class="nav-link text-dark">Hello, @Context.Session.GetString("Name")</span>
                        </li> *@
                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-action="LogOut" asp-controller="Employee">Logout</a>
                        </li>


                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <!-- Button trigger modal -->
    <button type="button" id="Modelclass" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
       Add
    </button>
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                     
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mb-3" id="HideId">
                        <input type="text" id="id" class="form-control" disabled />
                    </div>
                    <div class="form-group mb-3">
                        <input type="text" id="name" class="form-control" placeholder="Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <input type="text" id="address" class="form-control" placeholder="Address" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <input type="date" id="date" class="form-control" placeholder="Date" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <input type="text" id="status" class="form-control" placeholder="Status" />
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" onclick="Edit()" id="btnedit" style="display:none" class="btn btn-primary">Edit</button>
                    <button type="button" onclick="DeleteById()" id="btndeleteById" style="display:none" class="btn btn-danger">Delete</button>
                    <button type="button" onclick="Add()" id="btnsave" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </div>
    <div>
        <table class="centre table table-bordered" id="table_head">
            <thead>
                 <tr>
                    <th>
                        Id
                    </th>
                <th>
                    Name
                </th>
                <th>
                    Address
                </th>
                <th>
                    Date
                </th>
                <th>
                    status
                </th>
                <th>
                    Action
                 </th>
            </tr>
            </thead>
             <tbody id="table_body">

              </tbody>
         </table>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/custom.js"></script>

</body>
</html> 

